<?xml version="1.0" encoding="UTF-8"?>
<jsrllib>
  <template name="Menu"><![CDATA[
    <div class="langSel">
      @D{"Words.language"} 
      @select{lang, currentLang, onchange:setLanguage(#.get())}
        @foreach{lang, languages}
          @option{$lang, languages[$lang]}
        @end_foreach
      @end_select
    </div>
    @I{"SubMenu", topEntries, topDesc}
  ]]></template>
  <template name="SubMenu"><![CDATA[
    @foreach{key, $0}
      @set{desc, $1($key)}
      @set{subList, $desc.getSubList()}
      <div class="menuItem">
      @if {$subList}
          <div class="categoryEntry">@D{"Titles." + $desc.getName() + "._name"}</div>
        @else
          @I{"EntryLink", $desc.getName()}
        @end_if
        @if {$subList}
          <div class="menuItemGroup">
            @I{"SubMenu", $subList, $desc.getSubDesc()}
          </div>
        @end_if
      </div>
    @end_foreach
  ]]></template>
  <template name="EntryLink"><![CDATA[
    @if {currentEntry == $0}
      <div class="activeEntryLink">@D{"Titles." + $0}</div>
    @else
      <a class="entryLink" href="#@{$0}">@D{"Titles." + $0}</a>
    @end_if
  ]]></template>
  <template name="Paragraph"><![CDATA[
    <p>@block{0}</p>
  ]]></template>
  <template name="Enumerate"><![CDATA[
    <ol>@block{0}</ol>
  ]]></template>
  <template name="Item"><![CDATA[
    <li>@block{0}</li>
  ]]></template>
  <template name="Figure"><![CDATA[
    <div class="figure">@block{0}</div>
  ]]></template>
  <template name="Picture"><![CDATA[
    @img{$0}
  ]]></template>
  <template name="Caption"><![CDATA[
    图标题：@{$1}
  ]]></template>
</jsrllib>
